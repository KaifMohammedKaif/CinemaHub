<% layout("/layout/biolerplate.ejs") %>
<h1>Search Result :</h1>
<div class="all-cards-container search-container row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
  <% if (movieData && movieData.length) { %>

  <% movieData.forEach(movie => { %>
  <div class="col-sm-6 col-lg-2 mb-1">
    <a href="/movie/<%= movie.imdbID %>">
      <div class="card review-card">
        <img src="<%= movie.Poster %>" class="bd-placeholder-img card-img-top" width="100%" height="250" />
        <div class="card-body">
          <h5 class="card-title"><%= movie.Title %></h5>
          <p class="card-text">Rating: <%= movie.imdbRating %></p>
          <p class="card-text">
            <small class="text-muted">Release Date: <%= movie.Year %></small>
          </p>
        </div>
      </div>
    </a>
  </div>
  <% }) %>
  <% } else { %>
  <h1> No Result Found <small>(check spelling)</small></h1>
  <% } %>

</div>