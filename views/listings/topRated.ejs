<% layout("/layout/biolerplate.ejs") %>
<div class="col col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-10 offset-sm-1">
  <h1 class="featurette-heading offset-lg-4 mb-3">Top Rated Movies</h1>
  <hr />
  <% topRated.forEach(movie => { %>
  <a href="/movie/<%= movie.imdbID %>">
    <div class="card">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="<%= movie.Poster %>" class="bd-placeholder-img card-img-top" width="100%" height="300" />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= movie.Title %></h5>
            <p class="card-text">
              <b>Rating: <%= movie.imdbRating%> <span class="cinema rating-star">&starf;</span></b>
            </p>
            <p class="card-text">
              <b>Genre: <%= movie.Genre%></b>
            </p>
            <p class="card-text">
              <b>Runtime: <%= movie.Runtime%></b>
            </p>
            <p class="card-text"><%= movie.Plot %></p>
            <p class="card-text">
              <small class="text-muted"><%= movie.Released %></small>
            </p>
          </div>
        </div>
      </div>
    </div>
  </a>
  <hr />
  <% }) %>
</div>