<% layout("/layout/biolerplate.ejs") %>
<div class="row full-width">
  <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-10 offset-1">
    <h1 class="mt-3">Login to <span class="cinema">CinemaHub</span></h1>
    <form action="/login" method="post" class="needs-validation mb-3">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" type="text" class="form-control" required />
        <div class="valid-feedback">Looks good</div>
        <div class="invalid-feedback">Invalid Username</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" type="text" class="form-control" required />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">incorrect password</div>
      </div>
      <button class="btn btn-warning">Login</button>
    </form>
    <p>don't have account go to <a href="/signup" class="cinema">signup</a></p>
  </div>
</div>